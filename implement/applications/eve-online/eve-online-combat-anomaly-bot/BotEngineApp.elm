        ([ ( "hide-when-neutral-in-local"
           , AppSettings.valueTypeYesOrNo
                (\hide -> \settings -> { settings | hideWhenNeutralInLocal = hide })
           )
         , ( "anomaly-name"
           , AppSettings.valueTypeString
